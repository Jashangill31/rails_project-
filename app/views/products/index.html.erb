<h1 class="text-center my-4">All Products</h1>

<!-- Search Form -->
<div class="mb-3">
  <form method="get" action="/products">
    <input type="text" name="query" class="form-control" placeholder="Search for a product..." value="<%= params[:query] %>">
    <button type="submit" class="btn btn-primary mt-2">Search</button>
  </form>
</div>

<!-- Product List -->
<div class="row">
  <% if @products.present? %>
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><strong>Price:</strong> $<%= product.price %></p>
            <p class="card-text"><strong>Category:</strong> <%= product.category %></p>
            <a href="<%= product_path(product) %>" class="btn btn-success">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center">No products found.</p>
  <% end %>
</div>



